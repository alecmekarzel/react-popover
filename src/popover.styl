.wrapper
	z-index: 9999
	pointer-events: none

	&.open
		pointer-events: all

.inner
	padding: 7px
	border-radius: 9px
	border: solid #efefef 1px
	background: white
	box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.12)
	opacity: 1

@keyframes fadeIn
	from
		opacity: 0
		margin-top: 0px

	to
		opacity: 1
		margin-top: 6px
@keyframes fadeOut
	from
		opacity: 1
		margin-top: 6px

	to
		opacity: 0
		margin-top: 0px