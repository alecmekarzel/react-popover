{
	"name": "@alecmekarzel/react-popover",
	"author": "Alec Mekarzel",
	"version": "0.2.83",
	"repository": "git://github.com/alecmekarzel/react-popover.git",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"main": "dist/index.js",
	"module": "dist/react-popover.esm.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "tsdx watch",
		"build": "tsdx build src/index.ts",
		"test": "tsdx test --passWithNoTests",
		"prepare": "tsdx build src/index.ts",
		"size": "size-limit",
		"analyze": "size-limit --why"
	},
	"dependencies": {
		"@alecmekarzel/outside-click": "^0.2.0",
		"@popperjs/core": "^2.11.5",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"goober": "^2.1.10",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-popper": "^2.3.0",
		"tsdx": "^0.14.1",
		"use-delayed": "^0.1.0"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^7.0.8",
		"@testing-library/react": "^13.3.0",
		"husky": "^8.0.1",
		"size-limit": "^7.0.8",
		"typescript": "^4.7.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"size-limit": [
		{
			"path": "dist/popover.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/popover.esm.js",
			"limit": "10 KB"
		}
	]
}
