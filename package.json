{
	"name": "@alecmekarzel/react-popover",
	"author": "Alec Mekarzel",
	"version": "0.2.57",
	"repository": "git://github.com/alecmekarzel/react-popover.git",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"main": "dist/index.js",
	"module": "dist/react-popover.esm.js",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "parcel watch",
		"build": "parcel build src/index.js",
		"test": "parcel test --passWithNoTests",
		"prepare": "parcel build src/index.js",
		"size": "size-limit",
		"analyze": "size-limit --why"
	},
	"dependencies": {
		"@alecmekarzel/outside-click": "^0.2.0",
		"@popperjs/core": "^2.11.5",
		"@types/react": "^18.0.12",
		"@types/react-dom": "^18.0.5",
		"goober": "^2.1.9",
		"react": ">=18",
		"react-dom": "^18.1.0",
		"react-popper": "^2.3.0",
		"use-delayed": "^0.1.0"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^7.0.8",
		"husky": "^8.0.1",
		"parcel": "^2.6.0",
		"size-limit": "^7.0.8"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"size-limit": [{
			"path": "dist/popover.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/popover.esm.js",
			"limit": "10 KB"
		}
	]
}
