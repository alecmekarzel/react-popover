{
	"name": "@alecmekarzel/react-popover",
	"author": "Alec Mekarzel",
	"version": "0.2.28",
	"repository": "git://github.com/alecmekarzel/react-popover.git",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"main": "dist/index.js",
	"module": "dist/react-popover.esm.js",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "parcel watch",
		"build": "parcel build src/index.js",
		"test": "parcel test --passWithNoTests",
		"prepare": "parcel build src/index.js",
		"size": "size-limit",
		"analyze": "size-limit --why"
	},
	"dependencies": {
		"@alecmekarzel/outside-click": "^0.2.0",
		"@popperjs/core": "^2.6.0",
		"@types/react": "^17.0.1",
		"@types/react-dom": "^17.0.0",
		"goober": "^2.0.30",
		"react": ">=16",
		"react-dom": "^17.0.1",
		"react-popper": "^2.2.4",
		"use-delayed": "^0.1.0"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^4.5.5",
		"husky": "^5.0.9",
		"parcel": "^2.0.0-rc.0",
		"size-limit": "^4.9.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"size-limit": [
		{
			"path": "dist/popover.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/popover.esm.js",
			"limit": "10 KB"
		}
	]
}
